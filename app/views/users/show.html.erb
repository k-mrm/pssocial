<p id="notice"><%= notice %></p>

<h3>
  <%= @user.screenname  %>
  <small class="text-muted">
    @<%= @user.username  %>
  </small>
  <% if @user.admin %>
    <small><span class="badge badge-primary">administrator</span></small>
  <% end %>
</h3>

<p>
<% if user_me? %>
<button type="button" class="btn btn-secondary">
  edit profile
</button>
<% else %>
<button type="button" class="btn btn-primary">
  Follow
</button>
<% end %>
</p>

<p>
  <%= @user.profile  %>
</p>

<h5><%= @user.posts.size %> Posts</h5>

<ul class="list-group">
  <% for p in @user.posts %>
    <a class="list-group-item flex-column align-items-start list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= @user.screenname %> <small>@<%= @user.username %></small></h5>
      </div>
      <p class="mb-1"><%= p.content %></p>
    </a>
  <% end %>
</ul>
